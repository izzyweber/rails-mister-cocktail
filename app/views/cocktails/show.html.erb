<div class="container">
<h1><%= @cocktail.name %></h1>
<h3>Recipe</h3>

  <%if @cocktail.ingredients %>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><strong><%= dose.ingredient.name %></strong>   <%= dose.description %>
          <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, cocktail_dose_path(@cocktail, dose), method: :delete%>
        </li>
      <% end %>
    </ul>
      <%= link_to "Add another dose", new_cocktail_dose_path(@cocktail) %>
  <% else  %>
    <p>No doses yet!</p>
    <li><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></li>
  <% end %>

<hr>
<%= link_to "Back to all cocktails", cocktails_path %>
</div>
