<div class="container">
<h1 class="show"style=
        <% if @cocktail.photo? %>
          "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path @cocktail.photo%>);"
        <% else %>
        "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://images.unsplash.com/photo-1511715112108-9acc6c3ff61f?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=750&q=80');"
        <% end %>
        ><%= @cocktail.name %></h1>
<h3>Recipe</h3>

  <%if @cocktail.ingredients %>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><strong><%= dose.ingredient.name %></strong>   <%= dose.description %>
          <%= link_to '<i class="far fa-trash-alt"></i>'.html_safe, cocktail_dose_path(@cocktail, dose), method: :delete%>
        </li>
      <% end %>
    </ul>
      <%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
  <% else  %>
    <p>No doses yet!</p>
    <li><%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></li>
  <% end %>

<!-- <hr>
<%= link_to "Back to all cocktails", cocktails_path %> -->
</div>
